# InfluxDB Configuration
INFLUXDB_ADMIN_USERNAME=admin
INFLUXDB_ADMIN_PASSWORD=CHANGE_THIS_PASSWORD_NOW
INFLUXDB_ORG=weather-station
INFLUXDB_BUCKET=weather-data
INFLUXDB_ADMIN_TOKEN=CHANGE_THIS_TOKEN_MUST_BE_LONG_AND_RANDOM

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD
GRAFANA_SECRET_KEY=CHANGE_THIS_SECRET_KEY_RANDOM_STRING

# Redis Configuration (optional, leave empty for no password in dev)
REDIS_PASSWORD=

# API Authentication - CRITICAL FOR SECURITY
JWT_SECRET=CHANGE_THIS_JWT_SECRET_MUST_BE_VERY_LONG_AND_RANDOM
DEVICE_API_KEY=CHANGE_THIS_DEVICE_API_KEY_FOR_ARDUINO
ADMIN_API_KEY=CHANGE_THIS_ADMIN_API_KEY_FOR_MANAGEMENT

# Application Configuration
NODE_ENV=development
PORT=5002

