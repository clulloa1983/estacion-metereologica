# ===============================================
# Docker Environment Configuration
# ===============================================
# Copy this file to .env and customize values
# NEVER commit .env to version control

# InfluxDB Configuration
INFLUXDB_ADMIN_USERNAME=admin
INFLUXDB_ADMIN_PASSWORD=change-this-password-in-production
INFLUXDB_ORG=weather-station
INFLUXDB_BUCKET=weather-data
INFLUXDB_ADMIN_TOKEN=change-this-token-in-production-12345

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-grafana-password

# API Authentication
JWT_SECRET=your-super-secure-jwt-secret-change-in-production
DEVICE_API_KEY=secure-device-api-key-change-this
ADMIN_API_KEY=secure-admin-api-key-change-this

# Database URLs (for reference)
INFLUXDB_URL=http://influxdb:8086
REDIS_URL=redis://redis:6379
MQTT_URL=mqtt://mosquitto:1883

# Security Settings
NODE_ENV=development
PORT=5002